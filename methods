function clear() {
    # Actually call the real clear with command
    command clear
    x=$(($x+1))
    if [ "$x" -gt 4 ]; then
        echo "Clear called $x times"
        x=0
    fi
}

function reset() {
    # Actually call reset 
    command reset
    x=$(($x+1))
    if [ "$x" -gt 2 ]; then
        echo "Reset called $x times"
        x=0
    fi
}